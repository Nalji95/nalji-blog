<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></th>
        <td><%= article.description %></th>
        <td> <%= link_to 'Show', article_path(article) %></td> </th>
        <td> <%= link_to 'Delete', article_path(article), method: :delete %></td> </th>
      </tr>
    <% end %>
  </tbody>

  
</table>

