<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan= '3'> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></th>
        <td><%= article.description %></th>
        <td> <%= link_to 'Show', article_path(article) %></td> </th>
        <td> <%= link_to 'Edit', edit_article_path(article)%></td> </th>
        <td> <%= link_to 'Delete', article_path(article), method: :delete, data:{confirm: 'Are you sure?'} %></td> </th>
      </tr>
    <% end %>
  </tbody>

</table>
<p><%= link_to 'Create new article', new_article_path %></p>
